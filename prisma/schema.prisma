generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model urlMap {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  url       String
  shortUrl  String   @unique
  createdAt DateTime
  isActive  Boolean  @default(true)
  // expiresAfterNumberOfClicks Int?
  // clicks                     Int
  // expiresAt                  DateTime?
}

model history {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  url       String
  shortUrl  String
  createdAt DateTime
  isValid   Boolean
}
